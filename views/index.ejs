<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notebook</title>
    <!-- <link rel="stylesheet" href="/stylesheets/style.css"> -->
     <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script> 
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-5 py-2 bg-zinc-800 w-full rounded" type="text" placeholder="Title goes here" name="title">
                <textarea class="block px-5 py-2 mt-2 resize-none bg-zinc-800 w-full rounded" placeholder="Write your text here" name="details"></textarea>
                <input class='mt-2 bg-blue-600 px-5 py-2 rounded' type="submit" value="create task">
            </form>
        </div>
        <div class="tasks flex gap-3 flax-wrap p-10">
            <% if (files.length > 0) { %>
               <% files.forEach(function(val) { %>
                   <div class="task  min-w-72 px-3 py-4 bg-zinc-800 rounded">
                    <h1 class="text-white text-2xl tracking-tighter"><%= val %></h1>
                    <div class="flex w-full justify-between item-center mt-3">
                    <a class="text-blue-500 inline-block " href="/file/<%= val %>">Read more.</a>
                    <a class="text-zinc-600 ml-3 mt-4" href="/edit/<%= val %>">Edit FileName</a>
                    <a class="text-zinc-600 ml-3 mt-4" href="/editContent/<%= val %>">Edit Filecontent</a>
                    </div> 
                </div>
            <% }); %>
            <% } else { %>
                      <h3 class="text-zinc-300">No tasks yet</h3>
            <% } %>

 
        </div>
    </div>
    <!-- <script src="/javascripts/script.js"></script> -->
</body>
</html>